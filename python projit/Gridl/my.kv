WindowManager:
    MainWindow:
    SecondWindow:
    Python:
    Java:
    Php:
    Cn:
    Css:
    Chh:
    Error:
<MainWindow>:
    name:"main"
    GridLayout:
        cols:1
        GridLayout:
            rows:4
            Image:
                source:'logo1.png'
            Label:
                text:'LEARN PYTHON'
                font_size: 23
            Label:
                text:'Please Enter Password'
                size_hint:(0.1 ,0.3)
            TextInput
                id:passw
                text:'Enter Your Password'
                password:False
                multiline:False
                size_hint:(0.1,0.3)
        Button:
            text:'LOGIN'
            size_hint:(0.1,0.1)
            on_release:
                app.root.current = "second" if passw.text == "123456" else "error"
                root.manager.transition.direction ="up"


<SecondWindow>:
    name:'second'
    GridLayout:
        cols:1
        GridLayout:
            rows:2
            Image:
                source:'logo3.png'
            Label:
                text:'Welcome my Dear'
        GridLayout:
            cols:2
            rows:4
            Button:
                text:'PYTHON'
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current="python"
                    root.manager.transition.direction ="right"


            Button:
                text:'JAVA'
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current="java"
                    root.manager.transition.direction ="left"


            Button:
                text:'C#'
                size_hint:(0.1,0.1)
                on_release:
                on_release:
                    app.root.current="cn"
                    root.manager.transition.direction ="right"


            Button:
                text:'CSS'
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current="css"
                    root.manager.transition.direction ="left"


            Button:
                text:'C++'
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current="chh"
                    root.manager.transition.direction ="right"



            Button:
                text:'PHP'
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current="php"
                    root.manager.transition.direction ="left"


        Button:
            text:'GO BACK'
            size_hint:(0.1,0.3)
            on_release:
                app.root.current="main"
                root.manager.transition.direction ="down"

<Python>:
    name:'python'
    GridLayout:
        cols:1
        GridLayout:
            rows:2
            Image:
                source:'python.png'
            Label:
                text:'Learn python with Itachi python'
        Button:
            text:'BACK'
            size_hint:(0.1,0.1)
            on_release:
                app.root.current="second"

