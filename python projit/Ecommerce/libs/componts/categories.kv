<ButtonCategories@MDBoxLayout>:
    orientation:"horizontal"
    size_hine_y: None
    height: self.minimum_height
    padding: "5dp"
    spacing: "10dp"
    adaptive_height: True
    MDFillRoundFlatButton:
        md_bg_color:1,1,1,1
        elevation :50

        MDBoxLayout:
            FitImage:
                radius: [20,]
                source:"https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/aa45540e-ad2a-40b5-a132-ff89d7cdfc33/air-zoom-alphafly-next-flyknit-road-racing-shoes-h0q011.png"
            MDLabel:
                text:"Shoe"
                font_size: 10
                bold: True

    MDFillRoundFlatButton:
        radius: [20,]
        md_bg_color:1,1,1,1
        elevation :50

        MDBoxLayout:
            FitImage:
                radius: [20,]
                source:"https://images.samsung.com/is/image/samsung/assets/pt/watches/watchstudio/SM-R860NZK_ET-SHR88SG_S.png?$ORIGIN_PNG$"
            MDLabel:
                text:"Watch"
                font_size: 10
                bold: True

    MDFillRoundFlatButton:

        md_bg_color:1,1,1,1
        elevation :50

        MDBoxLayout:
            FitImage:
                radius: [10,]
                source:"https://herschel.eu/content/dam/herschel/products/10011/10011-00001-OS_01.jpg"
            MDLabel:
                text:"Backpack"
                font_size: 10
                bold: True
