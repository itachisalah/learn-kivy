<CustomCard@MDCard>:
    md_bg_color: get_color_from_hex('#eaeaea')
    radius :[12,12,12,12]
    text :''
    description:''
    btntext:''
    size_hint_x: None
    width:280
    elevation :0.5
    MDLabel:
        text: root.text
        padding_x: 20
        font_style: 'Subtitle2'
        font_size:13
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            text: root.description
            padding_x: 20
            font_style: 'Subtitle2'
            font_size:13
            theme_text_color:"Custom"
            text_color: get_color_from_hex('#525252')
            size_hint_y: None
            size: self.texture_size[0], self.texture_size[1]+30
    MDBoxLayout:
        padding :20
        MDFillRoundFlatButton:
            text:root.btntext
            theme_text_color:'Custom'
            font_style: 'Subtitle2'
            font_size:13
            bold: True
            text_color :get_color_from_hex('#ffffff')
            md_bg_color:get_color_from_hex('#7b1fa2')


<CustomButton@MDCard>:
    md_bg_color: get_color_from_hex('#eaeaea')
