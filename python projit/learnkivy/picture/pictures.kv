#:import kivy kivy
#:import win kivy.core.window
#:kivy 1.0

FloatLayout:
    canvas:
        Color:
            rgb:1,1,1
        Rectangle:
            source:'heroy.jpg'
            size:self.size

    BoxLayout:
        padding:10
        spacing:10
        size_hint:1,None
        height: 44
        pos_hint:{'top':1}
        Image:
            size_hint:None,None
            size:40,40
            source:'lamp.ico'

        Label:
            height:24
            text_size: self.width, None
            color:(1,1,1,0.8)
            text:'Welcome this Picture'




<Picture>:
    size: image.size
    size_hint:None,None
    on_size:self.center= win.Window.center

    Image:
        id: image
        source: root.source
        size: 400,400/self.image_ratio

        canvas.before:
            Color:
                rgba:1,1,1,1
            BorderImage:
                source:'shadow32.png'
                border:(36,36,36,36)
                size:(self.width+72, self.height+72)
                pos:(-36,-36)
