#: import C kivy.utils.get_color_from_hex

<LineWidthButton@RadioButton>:
    group: 'line_width'
    color: C('#2C3E50')
    background_color:C('#ECF0F1')
    border:(3,3,3,3)
    on_release:app.canvas_widget.set_line_width(self.text)
    background_normal:'color_button_normal.png'
    background_down:'color_button_down.png'


<ColorButton@RadioButton>:
    group: 'color'
    border:(3,3,3,3)
    on_release:app.canvas_widget.set_color(self.background_color)
    background_normal:'color_button_normal.png'
    background_down:'color_button_down.png'

<CanvasWidget>:
    BoxLayout:
        orientation:'vertical'
        padding: 2
        spacing:2
        x :0
        top: root.top
        width: 80
        height: 110
        LineWidthButton:
            text: 'Thin'
        LineWidthButton:
            text: 'Normal'
            state: 'down'
        LineWidthButton:
            text: 'Thick'

    Button:
        text:'Delete'
        right:root.right
        top:root.top
        width: 80
        height: 40
        on_release:root.clear_canvas()

    BoxLayout:
        orientation:'horizontal'
        padding: 3
        spacing:3
        x :0
        y: 0
        width: root.width
        height: 40
        ColorButton:
            background_color:C('#30c000')
            state:'down'
        ColorButton:
            background_color:C('#c00060')
        ColorButton:
            background_color:C('#123cba')
        ColorButton:
            background_color:C('#e7fa09')
        ColorButton:
            background_color:C('#0f0f0f')
        ColorButton:
            background_color:C('#f2167e')
        ColorButton:
            background_color:C('#c09000')
        ColorButton:
            background_color:C('#f7931d')


